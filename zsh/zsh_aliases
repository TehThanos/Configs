#General aliases
alias grep='grep --color'
alias ls='ls --color'
alias ll='ls -lh'
alias la='ls -A'
alias lla='ls -lhA'
alias clip='xclip -selection clipboard'
alias df='df -h'
alias chuser='qdbus --system org.freedesktop.DisplayManager /org/freedesktop/DisplayManager/Seat0 org.freedesktop.DisplayManager.Seat.SwitchToGreeter'
alias logout='qdbus org.kde.ksmserver /KSMServer logout 0 3 3'
alias suspend='systemctl suspend'
alias hibernate='systemctl hibernate'
alias bc='bc -ql'
alias open='xdg-open'
alias ps='ps -A auxc'
alias pss='ps -A auxc | grep -v grep | grep'
alias jobs='jobs -l'
alias ports='sudo netstat -tulpn | grep LISTEN'
alias upgradable='apt list --upgradable'
alias prj='cd $PRJ'
alias git-log='git log --all --graph --decorate --oneline'
alias ssh-hosts='grep -P "^Host ([^*]+)$" /home/teh/.ssh/config | sed "s/Host //"'

#Program aliases
alias shutdown='/sbin/shutdown'
alias reboot='/sbin/reboot'
alias bashtop='/home/teh/.local/bin/bpytop'
